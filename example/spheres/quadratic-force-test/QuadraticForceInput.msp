grid_flavor: grid_flavor_dem

includes:
  - config_spheres.msp

input_data:
  - particle_type:
      type: [ elastic ]
  - read_xyz:
      file: particles.xyz
      bounds_mode: FILE
      enlarge_bounds: 0.0 m
  - set_fields:
     polyhedra: false
     type:    [ elastic ]
     radius:  [   0.001 ]
     density: [    2000 ]

compute_force:
  - gravity_force:
     gravity: [0.0,0.0,-9.80665]
  - quadratic_force:
     cx: 0.38
     mu: 0.0000015
  - contact_sphere:
     symetric: true
     config: { kn: 100000, kt: 100000, kr: 0.1, mu: 0.5, damp_rate: 0.9} 

domain:
  cell_size: 0.002 m
  periodic: [false,false,true]

global:
  simulation_dump_frequency: -1
  simulation_end_iteration: 1000
  simulation_log_frequency: 1000
  simulation_paraview_frequency: 10
  dt: 0.00001 s 
  rcut_inc: 0.005 m
