lattice_op:
  - lattice:
     structure: SC
     types: [ alpha3 ]
     size: [ 15 , 15 , 15 ]
     region: FUNNEL and BZ

domain:
  cell_size: 50 m
  periodic: [false,false,false]
  grid_dims: [6,6,5]
  bounds: [[0,0,0],[300,300,250]] 

global:
  simulation_dump_frequency: -1
  simulation_end_iteration: 1000
  simulation_log_frequency: 100
  simulation_paraview_frequency: -1
  dt: 0.0001 s 
  rcut_inc: 0.2 m
